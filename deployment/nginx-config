# Nginx Configuration for Cooked Together
# Place this file in /etc/nginx/sites-available/cookedtogether
# Then symlink: sudo ln -s /etc/nginx/sites-available/cookedtogether /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;

    # Redirect to HTTPS (uncomment after setting up SSL)
    # return 301 https://$server_name$request_uri;

    client_max_body_size 16M;

    # Security Headers
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Main application
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Static files
    location /static {
        alias /home/cookedtogether/app/recipe_app/static;
        expires 30d;
        add_header Cache-Control "public, immutable";

        # Compression
        gzip on;
        gzip_types text/css application/javascript image/svg+xml;
    }

    # Uploaded images
    location /uploads {
        alias /home/cookedtogether/app/recipe_app/uploads;
        expires 7d;
        add_header Cache-Control "public";
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

